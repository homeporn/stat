generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "sqlite"
}

model Player {
  id           String   @id @default(cuid())
  name         String
  nickname     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sessions     SessionPlayer[]
  buyIns       BuyIn[]
  cashOuts     CashOut[]

  @@map("players")
}

model Session {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  players     SessionPlayer[]
  buyIns      BuyIn[]
  cashOuts    CashOut[]

  @@map("sessions")
}

model SessionPlayer {
  id        String   @id @default(cuid())
  sessionId String
  playerId  String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([sessionId, playerId])
  @@map("session_players")
}

model BuyIn {
  id        String   @id @default(cuid())
  sessionId String
  playerId  String
  amount    Float
  createdAt DateTime @default(now())
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@map("buy_ins")
}

model CashOut {
  id        String   @id @default(cuid())
  sessionId String
  playerId  String
  amount    Float
  createdAt DateTime @default(now())
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@map("cash_outs")
}
